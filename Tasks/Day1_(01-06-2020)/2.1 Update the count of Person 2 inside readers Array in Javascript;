//2.1 Update the count of Person 2 inside readers Array in Javascript;
function update()
{
var library = [
        {    title:"javascript", 
            price:"500", 
            readers:[
            {
               name:"person 1",
               count:"300"
            },
            {
            name:"person 2",
            count:"400"
            }
         ],
         authordetails:{
              name:"raj",
               age:"40"
         }
     },
     {
            title:"nodejs", 
            price:"600", 
            readers:[],
            authordetails:{
                  name:"raj",
                  age:"40"
          }
      }
   ]
//Update the count of Person 2 inside readers Array
library[0].readers[1].count="600";
console.log(library);
}
update();
